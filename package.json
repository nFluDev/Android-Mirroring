{
  "name": "android-mirroring",
  "version": "0.0.1-dev.0",
  "description": "Android Mirroring for MacOS",
  "keywords": [
    "Android",
    "Mirror",
    "macOS",
    "mac",
    "on",
    "emulator"
  ],
  "homepage": "https://github.com/nFluDev/Android-Mirroring#readme",
  "bugs": {
    "url": "https://github.com/nFluDev/Android-Mirroring/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nFluDev/Android-Mirroring.git"
  },
  "license": "UNLICENSED",
  "author": "nFlu",
  "type": "commonjs",
  "main": "src/app.js",
  "scripts": {
    "start": "electron .",
    "test": "electron .",
    "pre-dist": "chmod +x ./scrcpy-bin/scrcpy && chmod +x ./scrcpy-bin/adb",
    "dist": "npm run pre-dist && electron-builder"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "dev.nflu.androidmirroring",
    "productName": "Android Mirroring",
    "files": [
      "src/",
      "package.json"
    ],
    "extraResources": [
      "scrcpy-bin/",
      "platform-tools/"
    ],
    "asarUnpack": [
      "scrcpy-bin/**",
      "platform-tools/**"
    ],
    "mac": {
      "icon": "Assets/icon.icns",
      "target": "dmg"
    }
  }
}